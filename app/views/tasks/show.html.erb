<h1><%= @task.title %></h1>

<p>details: <%= @task.details %></p>
<p>completed? : <%= @task.completed %></p>

<p>
<%= link_to 'Update task', edit_task_path %>
</p>

<p>
<%= link_to 'Back to all tasks', tasks_path(@task.id) %>
</p>

<p>
<%= link_to 'delete this task', delete_task_path(@task.id), method: :delete %>
</p>
